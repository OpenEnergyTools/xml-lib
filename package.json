{
  "name": "@openenergytools/xml-lib",
  "description": "Function library for basic XML manipulations",
  "license": "Apache-2.0",
  "author": "Jakob Vogelsang",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenEnergyTools/xml-lib.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "eslint . && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint . --fix && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch --coverage",
    "build": "npx rimraf dist && tsc",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@web/dev-server-esbuild": "1.0.2",
    "@web/test-runner": "0.19.0",
    "chai": "npm:@esm-bundle/chai@^4.3.4-fix.0",
    "semantic-release": "24.1.2",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.1",
    "fast-check": "^3.22.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  }
}